<%= render :partial => 'shared/header' %>
<%= render :partial => 'shared/menu' %>
<div class="content-wrapper">
  <!-- Container-fluid starts -->
  <div class="container-fluid">
    <!-- Main content starts -->
    <div>
      <!-- Row Starts -->
      <div class="row">
        <div class="col-sm-12 p-0">
          <div class="main-header">
            <h4>Charities</h4>
            <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
              <li class="breadcrumb-item"><a href="/dashboard"><i class="icofont icofont-home"></i></a></li>
              <li class="breadcrumb-item">Administration</li>
              <li class="breadcrumb-item"><a href="/charities">Charities</a></li>
            </ol>
          </div>
        </div>
      </div>
      <!-- Row end -->
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-header-text d-inline-block m-b-0 f-w-600">
                Charities
              </h5>
              <a href="/charities/new" class="btn btn-primary waves-effect waves-light f-right md-trigger">
                <i class="icofont icofont-law-document"></i> Add charity
              </a>
            </div>
            <div class="card-block">
              <div class="row">
                <div class="table-content crm-table">
                  <div class="project-table">
                    <table id="crm-contact" class="table table-striped nowrap table-responsive">
                      <thead>
                      <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Info</th>
                        <th>Action</th>
                      </tr>
                      </thead>
                      <tbody class="table-quotes">
                      <% @charities.each do |charity| %>
                        <tr>
                          <td><%= charity["name"] %></td>
                          <td>
                            <a href="tel:+<%= charity["phone"] %>">
                              <%= phone_number_display(charity["phone"]) if charity["phone"].present? %>
                            </a>
                          </td>
                          <td>
                            <a href="mailto:<%= charity["email"] %>">
                              <%= charity["email"] %>
                            </a>
                          </td>
                          <td><%= charity["address"] %></td>
                          <td><%= charity["info"] %></td>
                          <td class="faq-table-btn">
                            <a href="/charities/<%= charity["idCharitie"] %>/edit" class="btn btn-primary waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                              <i class="icofont icofont-ui-edit"></i>
                            </a>
                          </td>
                        </tr>
                      <% end %>
                      </tbody>
                      <tfoot>
                      <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Info</th>
                        <th>Action</th>
                      </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Container-fluid ends -->
</div>
