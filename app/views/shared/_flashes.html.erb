<% flash.each do |key, value| %>
  <%
    if (key.to_s == "alert") or (key.to_s == "error")
      key = "danger"
    end
  %>
  <script type="text/javascript" charset="utf-8">
      $.growl({
          message: "<%= value.to_s %>",
      },{
          type: "<%= key.to_s %>",
          allow_dismiss: true,
          label: 'Cancel',
          className: 'btn-xs btn-inverse',
          placement: {
              from: 'top',
              align: 'center'
          },
          delay: 0,
          animate: { enter: 'animated fadeInDown' }
      });
  </script>
<% end %>