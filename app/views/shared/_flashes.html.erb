<% flash.each do |key, value| %>
  <%
    if key == "alert"
      key = "danger"
    end
  %>
  <div data-growl="container" class="alert alert-<%= key %> alert-dismissable growl-animated animated fadeInDown custom-growl" role="alert" data-growl-position="top-center">
    <button type="button" aria-hidden="true" class="close" data-growl="dismiss" style="display: block; z-index: 1030;">Ã—</button><span data-growl="icon"></span>
    <span data-growl="title"></span><span data-growl="message"><%= value %></span>
    <a href="#" data-growl="url"></a>
  </div>
<% end %>