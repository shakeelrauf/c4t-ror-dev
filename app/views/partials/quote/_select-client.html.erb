<script>
     userRole = "<%= @user.first.roles %>"
     <% client = @customers.first %>
    <% if (client) %>
$(document).ready(function() {
    $("#txtPhone").append(`<option value="<%= client.id %>"><%- client.phone %></option>`);
    $("#txtExtension").val("<%= client.extension %>");
    $("#txtEmail").val("<%= client.email %>");
    $("#txtCell").val("<%= client.cellPhone %>");
    $("#txtSecondPhone").val("<%= client.secondaryPhone %>");
    $("#txtFirstName").val("<%= client.firstName %>");
    $("#txtLastName").val("<%= client.lastName %>");
    <% if (client.business) %>
    $("#txtType").val("<%= client.type %>");
    $("#txtContactPosition").val("<%= client.business.contactPosition %>");
    $("#txtCompanyName").val("<%= client.business.name %>");
    $("#txtDescription").val("<%= client.business.description %>");
    $("#txtPST").val("<%= client.business.pstTaxNo %>");
    $("#txtGST").val("<%= client.business.gstTaxNo %>");
    <% end %>
    $("#txtAddress").val("<%= client.address.first.address if client.address.first.present? %>");
    $("#txtCity").val("<%= client.address.first.city if client.address.first.present? %>");
    $("#txtPostal").val("<%= client.address.first.postal if client.address.first.present? %>");
    $("#txtProvince option[value=<%= client.address.first.province if client.address.first.present? %>]").prop('selected', true);
    $("#txtHeardOfUs").val("Other");
    $("#txtGrade").val("<%= client.grade %>");
    $("#txtHow").val("<%= client.heardofus %>");
    $("#txtNote").val("<%= client.note %>");
    $("#txtCustomDollarCar").val("<%= client.customDollarCar %>");
    $("#txtCustomPercCar").val("<%= client.customPercCar %>");
    $("#txtCustomDollarSteel").val("<%= client.customDollarSteel %>");
    $("#txtCustomPercSteel").val("<%= client.customPercSteel %>");

    //Go next step:
    setTimeout(function() {
        wizard.steps("next");
    }, 100);
});
    <% end %>
</script>
